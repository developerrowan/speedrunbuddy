{
  "compilerOptions": {
    "target": "es2022",              
    "module": "es2022",              
    "allowJs": true,
    "outDir": "build",                     
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}